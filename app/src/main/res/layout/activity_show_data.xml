<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Form"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Date -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/row_border"
                    android:padding="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:paddingEnd="16dp"

                    android:text="Collection Date:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/row_border"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:padding="8dp"
                    android:paddingEnd="16dp"
                    android:text="2024-04-24" />
            </TableRow>

            <!-- Name -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/row_border"
                    android:padding="8dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:text="Patient Name:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/row_border"
                    android:padding="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:paddingEnd="16dp"
                    android:text="John Doe" />
            </TableRow>

            <!-- Age -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/row_border"
                    android:padding="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:paddingEnd="16dp"
                    android:text="Age:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/row_border"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:padding="8dp"
                    android:paddingEnd="16dp"
                    android:text="30" />
            </TableRow>

            <!-- Gender -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/row_border"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:padding="8dp"
                    android:paddingEnd="16dp"
                    android:text="Gender:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/row_border"
                    android:padding="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:paddingEnd="16dp"
                    android:text="Male" />
            </TableRow>

            <!-- Tests -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/row_border"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:padding="8dp"
                    android:paddingEnd="16dp"
                    android:text="Tests:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewTests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/row_border"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:padding="8dp"
                    android:paddingEnd="16dp"
                    android:text="Blood test, Urine test" />
            </TableRow>

            <!-- Lab Name -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/row_border"
                    android:padding="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:paddingEnd="16dp"
                    android:text="Lab Name:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewLabName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/row_border"
                    android:padding="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:paddingEnd="16dp"
                    android:text="XYZ Lab" />
            </TableRow>

            <!-- QR Code -->
            <TableRow android:background="@drawable/border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:paddingEnd="16dp"
                    android:text="QR Code:"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageViewQRCode"
                    android:layout_width="150dp"
                    android:background="@drawable/border"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:padding="24dp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
