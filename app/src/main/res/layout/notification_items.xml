<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llParent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_margin"
    android:background="@drawable/read_border_shadow"
    android:layout_marginBottom="3dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvTimeAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_dlg_bottom_margin"
        android:layout_centerInParent="true"
        android:text="2 mins ago"
        android:textAllCaps="false"
        android:textColor="@color/colorLtGrey"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/layout_dlg_bottom_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/profile_logout_top"
            android:layout_centerInParent="true"
            android:text="You have pickup schedule at 11 am"
            android:textAllCaps="false"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/view_margin"
            android:layout_marginLeft="@dimen/profile_logout_top"
            android:visibility="gone"
            android:text="75, Nerkundram Pathai, Vadapalani"
            android:textAllCaps="false"
            android:textColor="@color/colorLtGrey"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="@dimen/profile_logout_top"
            android:visibility="gone"
            android:background="@color/colorLtGrey" />

    </LinearLayout>

</LinearLayout>